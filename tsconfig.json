{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES6", "DOM"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "wrappers"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}